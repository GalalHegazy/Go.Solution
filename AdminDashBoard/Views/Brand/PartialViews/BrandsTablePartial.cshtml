@model IEnumerable<ProductBrand>

@foreach (var brand in Model)
{
    <div class=" col-md-4 col-lg-3 ">
        <div class="card card-product">

            <div class="card-body p-3 rounded-top-2 shadow-lg d-flex flex-column justify-content-center align-items-center">

                <div class=" w-100 d-flex justify-content-between ">
                    <span class=" text-dark fw-bolder ">Id</span>
                    <span class="text-muted ">@brand.Id</span>
                </div>
                <div class="d-flex justify-content-between w-100  ">
                    <span class=" text-dark  fw-bolder  ">Name</span>
                    <span class="text-muted  ">@brand.Name </span>
                </div>
  

            </div>



            <div class="card-footer py-1  rounded-bottom-2 p-0 d-flex justify-content-between">
            </div>

            <div class="  d-flex justify-content-around my-1 p-1">
                <partial name="_ButtonsIndexPartial" model="@brand.Id.ToString()" />
            </div>

        </div>
    </div>
}




