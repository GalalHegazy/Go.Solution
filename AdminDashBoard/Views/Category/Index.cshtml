@model IEnumerable<ProductCategory>
@{
    ViewData["Title"] = "Index";
}

<h1 class="text-left text-light fs-1 fw-bolder">All Categories.</h1>
<div class=" container  rounded-5 shadow-lg  pb-4 mt-2 mb-5 ">
    @if (Model.Count() > 0)
    {

        <div class=" d-flex justify-content-between row pt-4  ">
            <form asp-action="Index" class="d-flex col-md-3  ">
                <input class=" form-control" type="text" id="SearchInputCategory" name="SearchInputCategory" placeholder="Category Name">
                <button class="btn btn-success ms-2" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
            </form>
            <div class=" d-flex justify-content-end col-md-3  ">
                <a asp-controller="Category" asp-action="Create" class="btn btn-success "> <i class="fa-solid fa-circle-plus me-1"></i>Add Category</a>
            </div>
        </div>

        <div class="Categ-Card  row mt-2 g-3  ">

            <partial name="PartialViews/CategoriesTablePartial" />

        </div>

    }
    else
    {
        <div class="Drpartmrnt-Error text-center py-5  ">
            <i class="fa-solid fa-triangle-exclamation text-danger mb-3 "></i>
            <h2 class="text-light "> There Is No Categories!</h2>
            <a asp-controller="Category" asp-action="Create" class="btn btn-success mb-1 mt-5 ">Create New Category</a>
        </div>
    }
</div>
